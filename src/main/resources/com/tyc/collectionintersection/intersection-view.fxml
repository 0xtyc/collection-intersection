<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import java.lang.String?>


<VBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tyc.collectionintersection.controller.IntersectionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="sizeLabelA" text="Enter size of collection A" />
    <TextField fx:id="sizeTextFieldA" promptText="Enter size of collection A" />
    <Label fx:id="sizeLabelB" text="Enter size of collection B" />
    <TextField fx:id="sizeTextFieldB" promptText="Enter size of collection B" />
    <Label fx:id="optionLabel" text="Select which collection to hash" />
    <ComboBox fx:id="optionComboBox" value="A">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="A" />
                <String fx:value="B" />
            </FXCollections>
        </items>
    </ComboBox> 

    <Label fx:id="upperBoundLabel" text="Enter the upper bound for random collection generation"/>
    <TextField fx:id="upperBoundTextField" promptText="Enter the upper bound" />
    <Label fx:id="sizeOfIntersectionLabel" />
    <Label fx:id="timeToCalculateLabel" />
    <Label fx:id="errorLabel" textFill="red" />
    <Button fx:id="runButton" text="Run" />
</VBox>
